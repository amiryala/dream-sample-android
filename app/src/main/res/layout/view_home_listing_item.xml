<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/drawee_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/spacing_small"
        app:layout_constraintBottom_toTopOf="@+id/price_text_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_text_view"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/spacing_small"
        app:layout_constraintBottom_toTopOf="@+id/bed_image_view"
        app:layout_constraintStart_toStartOf="@+id/bed_image_view"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listing_type_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/drawee_image_view"
        android:background="@color/black_trans"
        android:textColor="@android:color/white"
        android:paddingTop="@dimen/spacing_tiny"
        android:paddingBottom="@dimen/spacing_tiny"
        android:paddingEnd="@dimen/spacing_small"
        android:paddingStart="@dimen/spacing_small"
        android:textAllCaps="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_bed"
        android:id="@+id/bed_image_view"
        android:layout_marginBottom="@dimen/spacing_small"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/street_textview"
        app:layout_constraintStart_toStartOf="@+id/street_textview"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bed_text_view"
        app:layout_constraintStart_toEndOf="@+id/bed_image_view"
        android:layout_marginStart="@dimen/spacing_tiny"
        app:layout_constraintTop_toTopOf="@+id/bed_image_view"
        app:layout_constraintBottom_toBottomOf="@+id/bed_image_view"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_bathtub"
        android:id="@+id/bath_image_view"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="@+id/bed_text_view"
        app:layout_constraintBottom_toBottomOf="@+id/bed_text_view"
        app:layout_constraintStart_toEndOf="@+id/bed_text_view"
        android:layout_marginStart="@dimen/spacing_small"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bath_text_view"
        app:layout_constraintStart_toEndOf="@+id/bath_image_view"
        android:layout_marginStart="@dimen/spacing_tiny"
        app:layout_constraintBottom_toBottomOf="@+id/bath_image_view"
        app:layout_constraintTop_toTopOf="@+id/bath_image_view"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/square_ft_textview"
        app:layout_constraintStart_toEndOf="@+id/bath_text_view"
        android:layout_marginStart="@dimen/spacing_small"
        app:layout_constraintBottom_toBottomOf="@+id/bath_text_view"
        app:layout_constraintTop_toTopOf="@+id/bath_text_view"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/street_textview"
        app:layout_constraintStart_toStartOf="@+id/city_state_text_view"
        app:layout_constraintEnd_toEndOf="@+id/city_state_text_view"
        android:layout_marginBottom="@dimen/spacing_tiny"
        app:layout_constraintBottom_toTopOf="@+id/city_state_text_view"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/city_state_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_small"/>
    <TextView
        android:text=""
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/image_count_text_view"
        android:background="@color/primary_color_trans"
        app:layout_constraintStart_toStartOf="parent"
        android:drawablePadding="@dimen/spacing_tiny"
        app:drawableEndCompat="@drawable/ic_images"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/drawee_image_view"
        android:paddingEnd="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small"
        android:gravity="center_vertical|end"
        android:paddingStart="@dimen/spacing_small"/>

</androidx.constraintlayout.widget.ConstraintLayout>